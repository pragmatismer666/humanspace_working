<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="55dp"
    tools:context=".User.Infrastructure.Fragments.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:background="@color/white_top"
        android:elevation="10dp">

        <ImageView
            android:visibility="gone"
            android:id="@+id/back_press"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:text="Account"
            android:textColor="@color/blue"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:drawableStart="@drawable/ic_notifications"
                android:textAllCaps="false"
                android:background="#00000000"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:textSize="14sp"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Activity"
                android:drawableStart="@drawable/ic_activity"
                android:textAllCaps="false"
                android:background="#00000000"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:textSize="14sp"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/saved_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:drawableStart="@drawable/ic_lit"
                android:textAllCaps="false"
                android:background="#00000000"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:textSize="14sp"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/request_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Verification"
                android:drawableStart="@drawable/ic_business_person"
                android:textAllCaps="false"
                android:background="#00000000"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:textSize="14sp"
                android:textAlignment="textStart"/>

            <Button
                android:id="@+id/switch_to_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request a Business / Professional Account"
                android:drawableStart="@drawable/ic_business_profession"
                android:textAllCaps="false"
                android:background="#00000000"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:textSize="14sp"
                android:textAlignment="textStart"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".User.SigninSignup.SignUp2ndScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_hs"
            android:transitionName="transition_back_arrow_btn"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:transitionName="transition_back_arrow_btn"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/signup_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="What's"
                android:layout_marginEnd="5dp"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:fontFamily="@font/meta_bold"
                android:transitionName="transition_title_text"/>

            <TextView
                android:id="@+id/signup_slide_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/signup_title_text"
                android:layout_centerVertical="true"
                android:fontFamily="@font/meta_bold"
                android:text="your email?"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:transitionName="transition_slide_text" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Don't lose access to your account, secure with your email."
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_outline_bg"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:drawablePadding="16dp"
                    android:hint="@string/email"
                    android:cursorVisible="true"
                    android:textColorHighlight="@color/colorPrimary"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/error_color"
                android:textAlignment="center" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="I want to receive news, updates and offers from HumanSpace."
            android:textColor="@color/gray"
            android:buttonTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/btn_bg"
            android:elevation="6dp"
            android:textAllCaps="false"
            android:text="@string/next_btn"
            android:textColor="@color/white"
            android:transitionName="transition_next_btn" />

    </LinearLayout>

</ScrollView>